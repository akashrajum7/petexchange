<% include partials/header %>

<div class="container">
    <div class="row h-100">
        <div class="col-md-5 mx-auto">
            <form id="signup-form" action="/user/<%= user.id %>?_method=PUT" method="POST">
                <h1>Edit <%= user.username %> profile</h1><hr>
                <div class="form-group">
                    <label for="signup-name">Username</label>
                    <input type="text" name="user[username]" class="form-control" id="signup-name" aria-describedby="usernameHelp" value="<%= user.username %>" required>
                    <small id="usernameHelp" class="form-text text-muted">You'll need to login again with new username.</small>
                </div>
                <div class="form-group">
                    <label for="phone-number">Phone number</label>
                    <input type="tel" name="user[phone]" class="form-control" id="phone-number" value="<%= user.phone %>" required>
                </div>
                <div class="form-group">
                    <label for="signup-email">Email address</label>
                    <input type="user[email]" name="user[email]" class="form-control" id="signup-email" aria-describedby="emailHelp" value="<%= user.email %>" required>
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>    
    </div>
</div>

<% include partials/footer %>