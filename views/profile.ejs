<% include partials/header %>

<div class="container">
    <% if(success && success.length > 0) { %>
        <div class="alert alert-success alert-dismissible fade show alert-homepage" role="alert">
            <%= success %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
            </button>
        </div>
    <% } %>
    <% if(failure && failure.length > 0) { %>
        <div class="alert alert-danger alert-dismissible fade show alert-homepage" role="alert">
            <%= failure %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
            </button>
        </div>
    <% } %> 
    <div class="row prof-row">
        <div class="col">
            <div class="card text-center">
                <div class="card-header">
                    <h4>Welcome to your profile!</h4>
                </div>
                <div class="card-body">
                    <p><strong>Username :</strong> <%= user.username %></p>
                    <p><strong>Email :</strong> <%= user.email %></p>
                    <p><strong>Phone :</strong> <%= user.phone %></p>
                    <a href="/user/<%= user._id %>/edit" class="btn btn-warning">Edit</a>
                </div>
            </div>
        </div>
    </div>
    <div class="row prof-row">
        <div class="col">
            <div class="card">
                <div class="card-header text-center">
                    <h4>Ads you posted!</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <% user.ads.forEach(function(ad){ %>
                            <div class="col-md-3 col-sm-6">
                                <div class="card">
                                    <img class="card-img-top" src="<%= ad.imageurl %>">
                                    <div class="card-body">
                                        <h4 class="card-title"><%= ad.title %></h4>
                                        <p class="card-text"><i class="fas fa-map-marker-alt"></i> Location: <%= ad.location %></p>
                                        <p class="card-text"><i class="fas fa-user"></i> <%= user.username %> </p>
                                        <% if (ad.price>0){ %>
                                            <p><strong>Price :</strong> <%= ad.price %></p>
                                        <% } else {%>
                                            <p><i class="fas fa-heart"></i> Adoption</p>
                                        <% } %>
                                        <a href="/ads/<%= ad._id %> " class="btn btn-primary">More info</a>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>
            </div>
        </div>
    </div>        
</div>

<% include partials/footer %>
